<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light">

    <include
        android:id="@+id/header"
        layout="@layout/activity_remote_control"
        android:visibility="gone"/>
    <!-- We will use the header from activity or include one here. 
         Actually RemoteControlActivity sets content view, so this file should be the full activity layout 
         OR we inflate it into a container. 
         For simplicity, I'll make this a full layout including the top bar. -->

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@mipmap/icon_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC Remote"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <!-- Display Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_display"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/very_light_frame"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back">

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="24Â°C"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />
            
    </androidx.cardview.widget.CardView>

    <!-- Controls -->
    <ImageButton
        android:id="@+id/btn_power"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_circle_bg"
        android:src="@drawable/icon_btn_startup_selector"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_display"
        app:tint="@color/dark_orange" />

    <ImageButton
        android:id="@+id/btn_temp_up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_circle_bg"
        android:src="@drawable/icon_btn_plus_selector"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEMP"
        android:textColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="@id/btn_temp_up"
        app:layout_constraintEnd_toStartOf="@id/btn_temp_up"
        app:layout_constraintStart_toEndOf="@id/btn_temp_down"
        app:layout_constraintTop_toTopOf="@id/btn_temp_up" />

    <ImageButton
        android:id="@+id/btn_temp_down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/btn_circle_bg"
        android:src="@drawable/icon_btn_reduce_selector"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        app:tint="@color/white" />

    <Button
        android:id="@+id/btn_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:text="MODE"
        android:backgroundTint="@color/btn_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_temp_down" />

    <Button
        android:id="@+id/btn_fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="FAN"
        android:backgroundTint="@color/btn_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_temp_up" />

</androidx.constraintlayout.widget.ConstraintLayout>
