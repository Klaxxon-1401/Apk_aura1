<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light"
    tools:context=".MainActivity">

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/fm_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/help_section_card"
        app:layout_constraintTop_toTopOf="parent">
        
        <!-- Default content when no remote is connected -->
        <LinearLayout
            android:id="@+id/default_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">
            
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:alpha="0.7" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/hello_remote"
                android:textColor="@color/light_blue"
                android:textSize="24sp"
                android:textStyle="bold" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/not_connect_any_remote"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center" />
            
            <Button
                android:id="@+id/btn_add_remote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_background_selector"
                android:paddingStart="32dp"
                android:paddingTop="12dp"
                android:paddingEnd="32dp"
                android:paddingBottom="12dp"
                android:text="@string/add_remote"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Help Section Card -->
    <LinearLayout
        android:id="@+id/help_section_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_aura_gradient"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/help_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/elk_me_using_help"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_section_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.9"
            android:text="@string/help_section_subtitle"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/help_section_item_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/elk_me_novice_guide"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/help_section_item_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/use_instructions"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/help_section_item_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/qa_instructions"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Bottom Navigation Divider -->
    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_remote" />

    <!-- Bottom Navigation Container -->
    <View
        android:id="@+id/v_bottom_remote"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Remote Tab -->
    <ImageView
        android:id="@+id/iv_remote"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:contentDescription="@string/remote_control"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_btn_power_switch"
        app:layout_constraintBottom_toTopOf="@id/tv_remote"
        app:layout_constraintEnd_toEndOf="@id/v_bottom_remote"
        app:layout_constraintStart_toStartOf="@id/v_bottom_remote"
        app:layout_constraintTop_toTopOf="@id/v_bottom_remote"
        app:tint="@color/light_blue" />

    <TextView
        android:id="@+id/tv_remote"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/remote_control"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom_remote"
        app:layout_constraintEnd_toEndOf="@id/iv_remote"
        app:layout_constraintStart_toStartOf="@id/iv_remote"
        app:layout_constraintTop_toBottomOf="@id/iv_remote" />

    <!-- Logo/Branding -->
    <TextView
        android:id="@+id/logo_txt_subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/elk_logo_title"
        android:textColor="#ffb7c2ce"
        android:textSize="12sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

